<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D7F1">

    <!-- Title -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="#B9A0D5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cal-Count"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
            android:id="@+id/navButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appTitle"
            android:layout_marginTop="143dp"
            android:gravity="center"
            android:orientation="vertical" tools:ignore="NotSibling">

        <Button
            android:id="@+id/overviewPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Overview"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dailyhistoryPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Daily History"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/customfoodsPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Custom Foods"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/settingsPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Settings"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>