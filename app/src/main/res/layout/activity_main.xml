<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Debug page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/overviewPageBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Daily History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dailyhistoryPageBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/overviewPageBtn"/>
    <Button
            android:text="Custom Food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/customfoodsPageBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dailyhistoryPageBtn"/>
    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/settingsPageBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customfoodsPageBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>