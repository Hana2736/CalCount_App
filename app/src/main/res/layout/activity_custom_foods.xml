<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomFoodsActivity">

<Button
        android:text="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/appHeader_overview"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:clickable="false" android:backgroundTint="?android:attr/textColorPrimaryNoDisable"/>
    <Button
        android:text="Daily History"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/dailyHistory_overview"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/settings_overview" app:layout_constraintTop_toBottomOf="@+id/appHeader_overview"
        android:layout_marginTop="24dp" android:layout_marginEnd="16dp" android:layout_marginStart="24dp"/>
    <Button
        android:text="Settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/settings_overview" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dailyHistory_overview" app:layout_constraintTop_toBottomOf="@+id/appHeader_overview"
        android:layout_marginTop="24dp" android:layout_marginEnd="24dp"/>
    <Button
        android:text="+"
        android:layout_width="80dp"
        android:layout_height="80dp" android:id="@+id/customFoodBtn_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>

    <EditText
        android:id="@+id/Meal_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Meal Name"
        app:layout_constraintBottom_toTopOf="@+id/Calorie_Amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyHistory_overview" />

    <EditText
        android:id="@+id/Calorie_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="424dp"
        android:ems="10"
        android:inputType="text"
        android:text="Calorie Amount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Meal_Name" />

    <Spinner
        android:id="@+id/Meal_Type"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Select_Day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Calorie_Amount" />

    <Spinner
        android:id="@+id/Select_Day"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="218dp"
        app:layout_constraintBottom_toTopOf="@+id/customFoodBtn_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Meal_Type" />

    <Button
        android:id="@+id/Submit_Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="11dp"
        android:text="Submit Meal"
        app:layout_constraintBottom_toTopOf="@+id/customFoodBtn_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Select_Day" />


</androidx.constraintlayout.widget.ConstraintLayout>
