<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D7F1">

    <!-- App Title -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="#B9A0D5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cal-Count"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navButtons"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/customFoodBtn_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Custom Food"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dailyHistory_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Daily History"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/settings_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:text="Settings"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Input Form -->
    <LinearLayout
        android:id="@+id/inputForm"
        android:layout_below="@id/navButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="#B9A0D5"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#B9A0D5"
            android:padding="16dp"
            android:text="Add Custom Food"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/Meal_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/Select_Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/Meal_Name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#B9A0D5"
            android:hint="Meal Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/Calorie_Amount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#B9A0D5"
            android:hint="Calories"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:id="@+id/Submit_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#B9A0D5"
            android:text="Submit"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>