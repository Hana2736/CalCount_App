<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3C8E5"
        tools:context=".DailyHistoryPage">

    <!-- App Header -->
    <Button
            android:id="@+id/appHeader_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="?android:attr/textColorPrimaryNoDisable"
            android:clickable="false"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- Navigation Buttons -->
    <Button
            android:id="@+id/overview_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#B9A0D5"
            android:text="Overview"
            android:textColor="#351F61"
            app:layout_constraintEnd_toStartOf="@+id/settings_history"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appHeader_history" />

    <Button
            android:id="@+id/settings_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#B9A0D5"
            android:text="Settings"
            android:textColor="#351F61"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/overview_history"
            app:layout_constraintTop_toBottomOf="@+id/appHeader_history" />

    <Button
            android:id="@+id/customFoodBtn_history"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#B29ACD"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#35205F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Daily History -->
    <ScrollView
            android:id="@+id/scrollview_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/settings_history"
            app:layout_constraintBottom_toTopOf="@+id/customFoodBtn_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
        <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>