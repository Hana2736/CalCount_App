<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OverviewPage">
    <Button
            android:text="🍿"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/mealTypeIcon_slice"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:checkable="false"
            android:clickable="false" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <Button
            android:text="Popcorn\n300 calories"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/mealDesc_slice"
            app:layout_constraintStart_toEndOf="@+id/mealTypeIcon_slice" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealTypeIcon_slice"
            app:layout_constraintBottom_toBottomOf="@+id/mealTypeIcon_slice"
            android:layout_marginEnd="8dp" android:gravity="start|top"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:checkable="false"
            android:clickable="false" android:layout_marginStart="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
